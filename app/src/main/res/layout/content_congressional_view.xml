<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#814483">

    <TextView
        android:id="@+id/location"
        android:layout_width="385dp"
        android:layout_height="72dp"
        android:layout_margin="0dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="23dp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:shadowColor="@color/TransparentGrey"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1.5"
        android:text="Zip: 95062"
        android:textColor="#FEE0FF"
        android:textSize="64sp"
        android:typeface="normal"
        app:fontFamily="@font/open_sans_condensed_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintVertical_bias="1.0"></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>




