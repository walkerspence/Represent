<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#814483"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MoreInfo"
    tools:showIn="@layout/activity_more_info">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="308dp"
        android:layout_height="400dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rep_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rep_photo"
                android:layout_width="215dp"
                android:layout_height="215dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:civ_border_color="#FFFFFFFF"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rep_name"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/rep_photo"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/rep_party"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/rep_photo"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rep_name" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="130dp"
                android:layout_height="58dp"
                android:layout_marginEnd="89dp"
                android:layout_marginLeft="89dp"
                android:layout_marginRight="89dp"
                android:layout_marginStart="89dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rep_photo">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/rep_site"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/outline"
                    android:clickable="true"
                    app:backgroundTint="@android:color/white"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:pressedTranslationZ="12dp"
                    app:rippleColor="@android:color/black"
                    app:srcCompat="@drawable/website" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/rep_mail"
                    android:layout_width="94dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/outline"
                    android:clickable="true"
                    app:backgroundTint="@android:color/white"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:pressedTranslationZ="12dp"
                    app:rippleColor="@android:color/black"
                    app:srcCompat="@drawable/mail" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>